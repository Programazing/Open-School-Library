@model Open_School_Library.Models.BookViewModels.BookDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GenreName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeweyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeweyName)
        </dd>
    </dl>

    <dl class="dl-horizontal">
        @if (@Model.IsAvailable == false && Model.StudentID > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </dt>
            <dd>
                <div class="checkedout"> Checked Out </div>
            </dd>
            <dt>
                Student
            </dt>
            <dd>
                <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentID"> @Model.StudentFristName @Model.StudentLastName  </a>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AvailableOn)
            </dt>
            <dd>
                @Model.AvailableOn.Value.ToString("MM/dd/yyy")
            </dd>

        }
        else
        {
            <dt>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </dt>
            <dd>
                <div>Available</div>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
