@model Open_School_Library.Models.BookViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>@Model.Title</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookID" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubTitle" class="col-md-2 control-label">Subtitle</label>
            <div class="col-md-10">
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Author" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ISBN" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GenreID" class="control-label col-md-2">Genre</label>
            <div class="col-md-10">
                <select asp-for="GenreID" class="form-control" asp-items="@Model.GenreList"></select>
                <span asp-validation-for="GenreID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DeweyID" class="control-label col-md-2">Dewey</label>
            <div class="col-md-10">
                <select asp-for="DeweyID" class="form-control" asp-items="@Model.DeweyList"></select>
                <span asp-validation-for="DeweyID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
